{var $interfaceSectionCls = !empty($interfaces) ? "section-item-container interface-section-container" : "uk-hidden" }
<div class="{$interfaceSectionCls}">
    <h3>Interface List</h3>
    {foreach $interfaces as $interface}
        <div class="uk-grid-small list-item" data-uk-grid>
            <div class="uk-width-1-1 uk-width-1-2@s">
                <span class="entity-type uk-text-right">interface</span>
                <a class="uk-text-break" href = "{$interface|linkReflection}">
                    {if isset($showSimpleName) && $showSimpleName}
                        {$interface->getShortName()}
                    {else}
                        {$interface->getName()}
                    {/if}
                </a>
            </div>
            {if $interface->isDeprecated() }
                <div class="uk-width-1-1 uk-width-1-2@s uk-flex uk-flex-left tags-container uk-flex uk-flex-left uk-flex-right@s">
                    <span class="uk-label uk-label-danger">deprecated</span>
                </div>
            {/if}
        </div>
    {/foreach}
</div>