<!DOCTYPE html>
<html>
<head>
    {include "partial/head.latte"}
</head>
<body>
<div class="uk-offcanvas-content">

    {include "partial/header.latte"}
    {include content}
    {include "partial/footer.latte"}
    <div id="offcanvas-push" uk-offcanvas="mode: slide; overlay: true">
        <div class="uk-offcanvas-bar" id = "sidebar">
            <button class="uk-offcanvas-close" type="button" uk-close></button>
            <div class="menu-container">
                {include "partial/site_menu.latte"}
                <ul class = "uk-text-left extra-items uk-width-1-1">
                    <li n:foreach="$apiCatalog as $item">
                        <img src ="/statics/images/apidocs/php/{$item['icon']}" style="height: 20px;width: 20px;padding-right: 5px"/>
                        <a href="{$item['url']}">{$item['name']}</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
</body>
</html>